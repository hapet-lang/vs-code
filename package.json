{
  "name": "hapetvscode",
  "displayName": "HapetVsCode",
  "description": "Hapet language for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension.js",
  "activationEvents": [
    "onLanguage:hapet"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hapet",
        "aliases": [
          "Hapet",
          "hapet"
        ],
        "extensions": [
          ".hpt",
          ".hptproj"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hapet",
        "scopeName": "source.hpt",
        "path": "./syntaxes/hapet.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "tag",
        "description": "Xml tag",
        "superType": "xml"
      },
      {
        "id": "param",
        "description": "Xml tag param",
        "superType": "xml"
      },
      {
        "id": "comment",
        "description": "Xml comment",
        "superType": "xml"
      },
      {
        "id": "bracket",
        "description": "Xml bracket",
        "superType": "xml"
      },


      {
        "id": "class",
        "description": "Class",
        "superType": "cs"
      },
      {
        "id": "using",
        "description": "Using",
        "superType": "cs"
      },
      {
        "id": "special_key",
        "description": "Special key",
        "superType": "cs"
      },
      {
        "id": "interface",
        "description": "Interface",
        "superType": "cs"
      },
      {
        "id": "struct",
        "description": "Struct",
        "superType": "cs"
      },
      {
        "id": "func",
        "description": "Function",
        "superType": "cs"
      },
      {
        "id": "var",
        "description": "Variable name",
        "superType": "cs"
      },
      {
        "id": "purple",
        "description": "Special lang word",
        "superType": "cs"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "default",
        "description": "Default modifier"
      },
      {
        "id": "static",
        "description": "Static modifier"
      },
      {
        "id": "declaration",
        "description": "Declaration modifier"
      }
    ],
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "tag.default": "#3d8dd6",
          "comment.default": "#449849",
          "bracket.default": "#777777",

          "using.static": "#3d8dd6",
          "class.static": "#4ec9b0",
          "struct.static": "#7fc590",
          "interface.static": "#b8d7a3",
          "func.static": "#dcdca5",
          "var.static": "#9cdcfe",
          "purple.static": "#d8a0df",
          "special_key.static": "#3d8dd6"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client",
    "compile:client": "tsc -b client/tsconfig.json",
    "watch:client": "tsc -b client/tsconfig.json -w",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "generator-code": "^1.11.12",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8",
    "yo": "^5.1.0"
  }
}
