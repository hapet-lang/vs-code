{
  "name": "hapetvscode",
  "displayName": "HapetVsCode",
  "description": "Hapet language for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension.js",
  "activationEvents": [
    "onLanguage:hapet"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hapet",
        "aliases": [
          "Hapet",
          "hapet"
        ],
        "extensions": [
          ".hpt",
          ".hptproj"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hapet",
        "scopeName": "source.hpt",
        "path": "./syntaxes/hapet.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "tag",
        "description": "Xml tag",
        "superType": "xml"
      },
      {
        "id": "param",
        "description": "Xml tag param",
        "superType": "xml"
      },
      {
        "id": "comment",
        "description": "Xml comment",
        "superType": "xml"
      },
      {
        "id": "bracket",
        "description": "Xml bracket",
        "superType": "xml"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "default",
        "description": "Default modifier"
      }
    ],
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "tag.default": "#3d8dd6",
          "comment.default": "#449849",
          "bracket.default": "#777777"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client",
    "compile:client": "tsc -b client/tsconfig.json",
    "watch:client": "tsc -b client/tsconfig.json -w",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "generator-code": "^1.11.12",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8",
    "yo": "^5.1.0"
  }
}
